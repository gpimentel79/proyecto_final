<div class="container" style="margin-top: 40px;">
  <h3>Modificar producto</h3>
  <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
    <input type="hidden" name="id" value={{novedad.id}} />
    <div class="mb-3">
      <label for="titulo" class="form-label">Producto</label>
      <input
        type="text"
        class="form-control"
        id="titulo"
        name="titulo"
        aria-describedby="Producto nuevo"
        value={{novedad.titulo}}
      />
      <div id="titulo" class="form-text">Nueva cerveza en stock.</div>
    </div>
    <div class="mb-3">
      <label for="abreviatura" class="form-label">Abrev.</label>
      <input
        type="text"
        class="form-control"
        id="abrev"
        name="subtitulo"
        value={{novedad.subtitulo}}
      />
    </div>
    <div class="mb-3">
    <label for="imagen" class="form-label">Imagen</label>
    <input type="file" class="form-control" id="imagen" name="imagen">
    </div>
    <p>
      <label><input type="checkbox" name="img_delete" id="img_delete" value="1">
      Eliminar imagen actual?    
      </label>
      <input type="hidden" name="img_original" value="{{novedad.img_id}}">
    </p>
    <div class="form-group">
      <label for="descripcion">Descripci√≥n</label>
      <textarea
        class="form-control"
        id="cuerpo"
        name="cuerpo"
        rows="3"
      >{{novedad.cuerpo}}</textarea>
    </div>
    <div class="text-right">
      <a class="btn btn-primary" href="/admin/novedades">
        Cancelar

      </a>
      <button type="submit" class="btn btn-success">Guardar</button>
    </div>
  </form>
  {{#if error}}
    <div class="alert alert-danger" style="margin-top:15px;" role="alert">
      {{message}}
    </div>

  {{/if}}
</div>